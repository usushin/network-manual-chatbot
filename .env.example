# Groq API設定（無料）
GROQ_API_KEY=your_groq_api_key_here

# モデル設定
MODEL_NAME=llama3-70b-8192
# 利用可能モデル: llama3-70b-8192, llama3-8b-8192, mixtral-8x7b-32768

# ベクトルストア設定
PERSIST_DIRECTORY=./data/vectorstore

# チャンクサイズ設定
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# 検索設定
SEARCH_K=4

# LLM設定
TEMPERATURE=0.3
MAX_TOKENS=2048

# キャッシュ設定
ENABLE_CACHE=true
CACHE_DIR=./data/cache

# ログ設定
DEBUG=false
LOG_LEVEL=INFO
LOG_DIR=./logs

# アプリケーション設定（高度な設定）
# 以下の設定は通常変更不要です

# 埋め込みモデル設定
# EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# パフォーマンス設定
# MAX_CACHE_SIZE=1000
# CACHE_EXPIRY_HOURS=24

# システム監視設定
# ENABLE_PERFORMANCE_MONITORING=true
# SYSTEM_CHECK_INTERVAL=10
#
